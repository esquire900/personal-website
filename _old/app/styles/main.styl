first = #378C9E
second = #79B1C4

grey-ulight = rgba(245, 245, 245, 1)
grey-light = rgba(225, 225, 225, 1)
grey = rgba(180, 180, 180, 0.5)
grey-dark = rgba(60, 60, 60, 1)
grey-udark = rgba(20, 20, 20, 1)

body 
	padding-top 60px
	color grey-dark
	font-size 14px
	position: relative;

.container
	max-width 970px

.navbar-default
	background-color grey-ulight
	border-bottom 4px solid grey-light
	height 60px
	.navbar-brand
		img
			height 30px

.navbar-default .navbar-nav > .active > a,
.navbar-default .navbar-nav > .active > a:hover,
.navbar-default .navbar-nav > .active > a:focus 
	background-color grey-ulight
	color first
	margin-top 2px

.navbar-default .navbar-nav > li > a 
