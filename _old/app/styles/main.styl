	color grey-dark
	margin-top 2px
	font-size 1.2em

.portfolio
	// background-color first
	background: rgb(71,181,204); /* Old browsers */
	background: -moz-radial-gradient(center, ellipse cover, rgba(71,181,204,1) 0%, rgba(55,140,158,1) 76%, rgba(55,140,158,1) 76%); /* FF3.6+ */
	background: -webkit-gradient(radial, center center, 0px, center center, 100%, color-stop(0%,rgba(71,181,204,1)), color-stop(76%,rgba(55,140,158,1)), color-stop(76%,rgba(55,140,158,1))); /* Chrome,Safari4+ */
	background: -webkit-radial-gradient(center, ellipse cover, rgba(71,181,204,1) 0%,rgba(55,140,158,1) 76%,rgba(55,140,158,1) 76%); /* Chrome10+,Safari5.1+ */
	background: -o-radial-gradient(center, ellipse cover, rgba(71,181,204,1) 0%,rgba(55,140,158,1) 76%,rgba(55,140,158,1) 76%); /* Opera 12+ */
	background: -ms-radial-gradient(center, ellipse cover, rgba(71,181,204,1) 0%,rgba(55,140,158,1) 76%,rgba(55,140,158,1) 76%); /* IE10+ */
	background: radial-gradient(ellipse at center, rgba(71,181,204,1) 0%,rgba(55,140,158,1) 76%,rgba(55,140,158,1) 76%); /* W3C */
	// filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#47b5cc', endColorstr='#378c9e',GradientType=1 ); /* IE6-9 fallback on horizontal gradient */
	border-top 3px solid #296875
	border-bottom 15px solid second
